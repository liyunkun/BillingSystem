<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_content"
    tools:context="com.liyunkun.billingsystem.TallyActivity">

    <ImageView
        android:id="@+id/back_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@drawable/ic_menu_back" />

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/back_iv"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/tv_userName"
        android:background="#51fa03" />

    <View
        android:id="@+id/v2"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_below="@id/v1"
        android:layout_marginLeft="70dp"
        android:background="#51fa03" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:text="账单"
        android:textColor="#000"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="#a0efd9"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_login"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/buttom_select"
            android:padding="5dp"
            android:text="首页"
            android:textColor="#F00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_add"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/buttom_select"
            android:padding="5dp"
            android:text="添加记录"
            android:textColor="#F00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_mouth"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/buttom_select"
            android:padding="5dp"
            android:text="每月明细"
            android:textColor="#F00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bt_week"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/buttom_select"
            android:padding="5dp"
            android:text="每周明细"
            android:textColor="#F00"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/el_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout"
        android:layout_below="@id/tv"
        android:layout_marginLeft="60dp"
        android:background="@null"
        android:childDivider="@null"
        android:clickable="false"
        android:divider="@null"
        android:groupIndicator="@null" />
</RelativeLayout>
